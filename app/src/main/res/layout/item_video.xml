<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.syfuzzaman.swipeable_video_player_android.common.BaseListItemCallback" />

        <variable
            name="data"
            type="com.syfuzzaman.swipeable_video_player_android.VideoBean" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        >

        <FrameLayout
            android:id="@+id/main_media_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.media3.ui.PlayerView
                android:id="@+id/videoFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:keepScreenOn="true"
                app:auto_show="false"
                app:controller_layout_id="@layout/custom_player_view"
                app:resize_mode="zoom"
                app:show_buffering="when_playing"
                app:show_shuffle_button="false"
                app:surface_type="surface_view"
                app:use_controller="true"/>
        </FrameLayout>



        <ImageView
            android:id="@+id/like"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_thumb_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/likeCount"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="1"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="6dp"
            android:layout_height="wrap_content"
            android:text="102K"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/dislike"
            app:layout_constraintTop_toBottomOf="@id/like"
            app:layout_constraintStart_toStartOf="@id/like"
            app:layout_constraintEnd_toEndOf="@id/like"/>


        <ImageView
            android:id="@+id/dislike"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_thumb_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/likeCount"
            app:layout_constraintBottom_toTopOf="@id/dislikeCount"
            app:tint="@color/white"
            app:layout_constraintHorizontal_bias="1"
            />

        <TextView
            android:id="@+id/dislikeCount"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="6dp"
            android:layout_height="wrap_content"
            android:text="102K"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/comment"
            app:layout_constraintTop_toBottomOf="@id/dislike"
            app:layout_constraintStart_toStartOf="@id/dislike"
            app:layout_constraintEnd_toEndOf="@id/dislike"/>

        <ImageView
            android:id="@+id/comment"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/dislikeCount"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@id/share"
            app:tint="@color/white"
            android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_bias="1"
            />
        <ImageView
            android:id="@+id/share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/comment"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white"
            android:layout_marginBottom="24dp"
            app:layout_constraintHorizontal_bias="1"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/userProfileImage"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/userName"
            android:background="@drawable/circular_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="1"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            />



        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Syed Syfuzzaman"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginStart="6dp"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintStart_toEndOf="@id/userProfileImage"
            app:layout_constraintTop_toTopOf="@id/userProfileImage"
            app:layout_constraintBottom_toBottomOf="@id/userProfileImage"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="#cc0001"
            android:text="Subscribe"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:padding="0dp"
            android:textSize="14sp"
            android:textStyle="normal"
            app:cornerRadius="4dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/userName"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@id/userName"
            app:layout_constraintStart_toEndOf="@id/userName"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:text="Big Buck Bunny tells the story of a giant rabbit with a heart bigger than himself. When one s"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userProfileImage"
            app:layout_constraintBottom_toTopOf="@id/tags"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:text="#Bike, #R15, #YAMAHA"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>