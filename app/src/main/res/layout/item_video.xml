<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.syfuzzaman.swipeable_video_player_android.common.BaseListItemCallback" />

        <variable
            name="data"
            type="com.syfuzzaman.swipeable_video_player_android.VideoBean" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        >

        <FrameLayout
            android:id="@+id/main_media_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.media3.ui.PlayerView
                android:id="@+id/videoFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:keepScreenOn="true"
                app:auto_show="false"
                app:controller_layout_id="@layout/custom_player_view"
                app:resize_mode="fixed_width"
                app:show_buffering="when_playing"
                app:show_shuffle_button="false"
                app:surface_type="surface_view"
                app:use_controller="true" />
        </FrameLayout>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_more"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_search"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/menu"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/shorts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Shorts"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/search"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_thumb_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/likeCount"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintVertical_bias="1"

            app:tint="@color/white" />

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginHorizontal="6dp"
            android:layout_height="wrap_content"
            android:text="102K"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/dislike"
            app:layout_constraintTop_toBottomOf="@id/like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline" />


        <ImageView
            android:id="@+id/dislike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_thumb_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/likeCount"
            app:layout_constraintBottom_toTopOf="@id/dislikeCount"
            app:tint="@color/white"
            />

        <TextView
            android:id="@+id/dislikeCount"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginHorizontal="6dp"
            android:layout_height="wrap_content"
            android:text="102K"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@id/comment"
            app:layout_constraintTop_toBottomOf="@id/dislike"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/dislikeCount"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toTopOf="@id/share"
            app:tint="@color/white"
            android:layout_marginBottom="40dp"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/comment"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white"
            android:layout_marginBottom="?actionBarSize"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />


        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="6dp"
            android:drawableTint="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Syed Syfuzzaman"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="1"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Subscribe"
            android:textColor="@color/white"
            android:padding="0dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/userName"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@id/userName"
            app:layout_constraintStart_toEndOf="@id/userName"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:text="Big Buck Bunny tells the story of a giant rabbit with a heart bigger than himself. When one s"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userName"
            app:layout_constraintBottom_toTopOf="@id/tags"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:text="#Bike, #R15, #YAMAHA"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="?actionBarSize"
            android:layout_marginStart="16dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>