<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.syfuzzaman.swipeable_video_player_android.data.ShortsBean" />

        <variable
            name="index"
            type="Integer" />

        <variable
            name="playerCallback"
            type="com.syfuzzaman.swipeable_video_player_android.common.PlayerStateCallback"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_margin="8dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/media_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:scaleType="center"
            app:cardCornerRadius="16dp"
            >

            <androidx.media3.ui.PlayerView
                app:surface_type="texture_view"
                android:id="@+id/item_video_exoplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:resize_mode="zoom"
                app:video_url="@{data.mediaUrl}"
                on_state_change="@{playerCallback}"
                app:progressbar="@{progressBar}"
                app:thumbnail="@{thumbnail}"
                app:item_index="@{index}"
                volumeControl="@{volumeControl}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#fff"
                android:scaleType="centerCrop"
                app:thumbnail="@{data.thumbnail}" />

            <ImageView
                android:id="@+id/volumeControl"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:animateLayoutChanges="true"
                android:padding="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_mute"
                android:scaleX="-1"
                app:tint="@color/white" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>